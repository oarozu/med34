   
{% block body -%}
               <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times</button>
            <h4 class="modal-title">Aval Plan de Gestión</h4>
            </div>			<!-- /modal-header -->
            <div class="modal-body">          
   <form  action="{{ path('avalplang_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
   <table class="table table-bordered table-striped hidden-mobile">
   <input type="hidden" name="_method" value="PUT" />
     {{ form_errors(edit_form) }}
      <tr>
       <td colspan="2">Observaciones Anteriores:<br>
          {% set texto = entity.observaciones|split('|') %} 
   {% for obs in texto%}
   {{obs}}<br>    
   {%endfor%}  
       </td>
   </tr>
   <tr>
       <td>Observaciones</td>
       <td>{{ form_widget(edit_form.observaciones) }}</td>
   </tr>
      <tr>
       <td>Avalar</td>
       <td>{{ form_widget(edit_form.avalado) }}</td>
   </tr>
   <tr>
        {% if is_granted('ROLE_DEC') %}
       <td>
       Plan de Gestión Original escaneado<br>
       <font color="#F87217">Adjunte el escaner del plan de gestión (Formato excel), únicamente en formato PDF y máximo 1MB de tamaño</font>
       </td>
       		    <td>
		     {{ form_widget(edit_form.file) }} {{ form_errors(edit_form.file) }}
                        
		    </td>
                    {%endif%}
   </tr>
   
   <tr>
    <td></td>
    <td><button type="hidden" class="btn btn-lg btn-primary">Guardar</button></td>
  </tr>
  {{ form_widget(edit_form._token) }}
  </table>
</form>        
{% endblock %}
