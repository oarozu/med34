{% extends '::base.html.twig' %}
{% block body -%}
<a href="{{ path('docente_show', {'id': app.session.get('docenteid') }) }}"> << Regresar</a>
<h1>Evaluación de Lider a Directores de Curso</h1>
    {%for programa in entity.lider%}
    <h1>Programa {{programa.nombre}}</h1>
    <table class="table table-bordered table-striped hidden-mobile" style="width: 95%">
        <thead>
            <tr>
                <th>Código</th>
                <th>Curso</th>
                <th>Periodo</th>
                <th>Director</th>
                <th>Evaluar</th>
            </tr>
        </thead>
        <tbody>
        {% for curso in programa.cursos %}
            {%for oferta in curso.oferta%}
            <tr>
                <td>{{oferta.curso.id}}</td>
                <td>{{oferta.curso.nombre}}</td>
                <td>{{oferta.periodo}}</td>
                <td>
                {%if oferta.director%}
                {{oferta.director.user.nombres}} {{oferta.director.user.apellidos}}
                {%endif%}    
                </td>
                <td>
                {%if oferta.director%}    
                {%if oferta.coeval %}
               {%if oferta.coeval.f0 %}
               {{oferta.coeval.f0}}
                {%else%}
                <a href="{{ path('coevaldirector_edit', { 'id': oferta.id }) }}">Evaluar...</a>   
                {%endif%}
                {%else%}
                <a href="{{ path('coevaldirector_edit', { 'id': oferta.id }) }}">Evaluar...</a>
                 {%endif%}
                
                 {%endif%}
                 </td>
                 {%endfor%}
        {% endfor %}
        </tbody>
    </table>
 {%endfor%}
{% endblock %}