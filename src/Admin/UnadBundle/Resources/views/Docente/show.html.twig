    <td>
      {%if entity.plangestion.pdf%}
       <i class="fa fa-check" style="color: #739e73"></i>
       {%else%}
       <i class="fa fa-times" style="color: #a90329"></i>
       {%endif%}  
    </td>
    </tr>
    
      <tr>      
    <th>Registro Roles

    </th>
    <td>Registro de roles para autoevaluación</td>    
    <td>
    {%if entity.plangestion %}
    {%if instrumentos[0].estado%}   
    <a href="{{ path('plangestion_crear') }}" class="btn btn-primary btn-xs">Ingresar <i class="fa fa-sign-in"></i></a>
    {%else%}<i>Ver cronograma</i>{%endif%}
    {%endif%}
    </td>
  
        <td>
        {%if entity.plangestion.estado == 'Cerrado' or  entity.plangestion.estado == 'Autoevaluado' or  entity.plangestion.estado == 'Confirmado' %}
       <i class="fa fa-check" style="color: #739e73"></i>
       {%else%}
       <i class="fa fa-times" style="color: #a90329"></i>
       {%endif%}    
        </td>
      </tr>
      <tr>
    <th>Autoevaluación
    </th>
    <td>Descrición del avance y cargue de evidencias</td>    
    <td>
    {%if entity.plangestion %}
          {%if instrumentos[1].estado%}  
    <a href="{{ path('plangestion_show', { 'id': entity.plangestion.id }) }}" class="btn btn-primary btn-xs">Ingresar <i class="fa fa-sign-in"></i></a>
            {%else%}<i>Ver cronograma</i>{%endif%}
            {%endif%}
    </td>
    <td>
    {%if entity.plangestion.autoevaluacion is not null%}
    <i class="fa fa-check" style="color: #739e73"></i>
    {%else%}
   <i class="fa fa-times" style="color: #a90329"></i>
   {%endif%}
    </td>
    </tr>
 {%else%}
      <tr>
    <th>Autoevaluación (Plan de Actividades)</th>
    <td>Plan de Actividades
    <a href="javascript:popUp('{{ path('plangestion_info', { 'id': entity.id }) }}')">(Asignación académica)</a>
    </td>    
    <td>
    {%if entity.plangestion.autoevaluacion is null %}
     {%if instrumentos[1].estado%} 
    <a href="{{ path('plangestion_conf', { 'id': entity.id }) }}" class="btn btn-primary btn-xs">Ingresar <i class="fa fa-sign-in"></i></a>
    {%else%}<i>Ver cronograma</i>{%endif%}
    {%else%}
    <i>Ver Resultados</i>
    {%endif%}    
    </td>

    </tr>  
 {%endif%}
  {%if entity.tutoria|length > 0%}
    <tr>
    <th>
Coevaluación -  Red de tutores
        </th>
        <td>Evaluación del tutor al director de curso</td> 
    <td>
     {%if instrumentos[2].estado%}    
    <a href="{{ path('redtutores') }}" class="btn btn-primary btn-xs">Ingresar <i class="fa fa-sign-in"></i></a>
    {%endif%}
    </td>
  </tr>
  {%endif%}
    {%if entity.director|length > 0%}
  <tr> 
    <th>
Coevaluación - Director de curso a tutores
        </th>
        <td>Evaluación del director a los tutores de curso</td> 
    <td>
    {%if instrumentos[3].estado%}     
    <a href="{{ path('docente_coevaltutor') }}" class="btn btn-primary btn-xs">Ingresar <i class="fa fa-sign-in"></i></a>
    {%endif%}
    </td> 
  </tr>
  {%endif%}
        {% if entity.lider|length > 0 %}
