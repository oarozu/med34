{% extends '::base.html.twig' %}
{% block body -%}
        {{ include(
            'AdminUnadBundle:Docente:detalle.html.twig',
            {'entity': entity}
        ) }}
         {% if is_granted('ROLE_ADMIN') %}
        <ul class="record_actions">
    <li>
        <a href="{{ path('docente_edit', { 'id': entity.id }) }}">
            Edit
        </a></li>
</ul>
           {%endif%}

<h4>3. Instrumentos de Evaluación</h4>
  <table class="table table-bordered hidden-mobile" style="width: 95%">
      <tr>
          <th>Instrumento</th>
          <th>Descripción</th>
          <th>Acción</th>
          <th>Estado</th>
      </tr>
{%if entity.vinculacion == 'De Carrera'%}  
        <tr>
        <th>
        Plan de Gestión Docente
        </th>
        <td>Formato Plan de Gestión en formato Excel  <a href="http://siga.unad.edu.co/docs/formato_plan_gestion_docente.xlsx" target="new">(Descargar) <i class="fa fa-download"></i></a></td>
        <td>
        {%if entity.plangestion.formato%}
            <a href="../../../{{entity.plangestion.formato.webpath}}"><i class="fa fa-file-o"></i> Ver Archivo...</a>
            {%else%}
            <a href="{{ path('formatoplang_new', { 'id': entity.id }) }}" class="btn btn-primary btn-xs">Cargar <i class="fa fa-upload"></i></a>
            {%endif%}
        </td>
        <td>
        {%if entity.plangestion.formato%}
       <i class="fa fa-check" style="color: #739e73"></i>
       {%else%}
       <i class="fa fa-times" style="color: #a90329"></i>
       {%endif%}    
        </td>
    </tr>
    <tr>
    <th></th>
    <td>Plan de Gestión Aprobado en PDF. (Este es cargado por el Decano Nacional)</td>
    <td>
    {%if entity.plangestion.pdf%}
    <a href="javascript:popUp('../../../{{entity.plangestion.pdf.webpath}}')"><i class="fa fa-file-o"></i> Ver Archivo...</a>
