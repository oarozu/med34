{% extends '::base.html.twig' %}
{% block body -%}
   Id:{{ entity.id }}<h1>Información del Docente: </h1>
  <table class="table table-bordered table-striped hidden-mobile" style="width: 95%">
  <tr>
    <th class="data">Cédula</th>
    <td class="data">{{ entity.user.id }}</td>
    <th class="data">Periodo Acádemico</th>
    <td class="data">2014-1</td>
  </tr>
  <tr>
    <th class="data">Nombres</th>
    <td class="data">{{ entity.user.nombres }}</td>
    <th class="data">Vinculación</th>
    <td class="data">{{ entity.vinculacion }}</td>
  </tr>
  <tr>
    <th class="data">Apellidos</th>
    <td class="data">{{ entity.user.apellidos }}</td>
    <th class="data">Centro</th>
    <td class="data">{{ entity.centro.nombre }}</td>
  </tr>
  <tr>
    <th class="data">Escuela</th>
    <td class="data">{{ entity.escuela.nombre }}</td>
    <th class="data">Modalidad</th>
    <td class="data">{{ entity.modalidad }}</td>
  </tr>
  <tr>
    <th class="data">Programa</th>
    <td class="data">{{ entity.programa.nombre }}</td>
    <th class="data">Perfil</th>
    <td class="data">{{ entity.perfil }}</td>
  </tr>
    <tr>
    <th class="data">Cargo</th>
    <td class="data">{{ entity.cargo }}</td>
    <th class="data">Correo</th>
    <td class="data">{{ entity.user.email }}</td>
  </tr>
  <tr>
   <th>Dirección de curso</th>
      <td colspan="3">{%for curso in entity.director%} {{curso.id}}:{{curso.nombre}} | {%endfor%}
   </td>
  </tr> 
  <tr>
      <th>Tutorias</th>
      <td colspan="3">{%for curso in entity.tutoria%} {{curso.id}}:{{curso.nombre}} | {%endfor%}
   </td>
  </tr>
</table>
         {% if is_granted('ROLE_ADMIN') %}
        <ul class="record_actions">
    <li>
        <a href="{{ path('docente_edit', { 'id': entity.id }) }}">
            Edit
        </a></li>
</ul>
           {%endif%}
   
  <table class="table table-bordered hidden-mobile" style="width: 95%">
      <tr>
          <th>Instrumento de Evaluación</th>
          <th></th>
          <th></th>
      </tr>
    <tr>
    <th>
    {%if entity.vinculacion == 'DC'%}
    1. Plan de Gestión      
    {%else%}
    1. Plan de Activiades
    {%endif%}
        </th>
        <td>
        <a href="javascript:popUp('{{ path('plangestion_info', { 'id': entity.id }) }}')" class="btn btn-primary btn-xs">Ver Activiades <i class="fa fa-sign-in"></i></a>    
        </td>    
    <td>
<a href="javascript:popUp('{{ path('plangestion_autoeval', { 'id': entity.id }) }}')" class="btn btn-primary btn-xs">Ver Autoevaluación <i class="fa fa-sign-in"></i></a>
    </td>
    </tr>
  <tr>
    <th>
2. Evaluación de la red de tutores
        </th>
        <td><a href="javascript:popUp('{{ path('redtutores_info', {'id': entity.id }) }}')" class="btn btn-primary btn-xs">Ver Calificaciones <i class="fa fa-sign-in"></i></a></td> 
    <td></td>
  </tr>
    <tr>
    <th>
3. Evaluación de estudiantes
        </th>
        <td>
           {%if entity.heteroeval%} 
            <a href="javascript:popUp('{{ path('heteroeval_info', {'id': entity.id }) }}')" class="btn btn-primary btn-xs">Ver Calificaciones <i class="fa fa-sign-in"></i></a>
        {%else%} Sin registros {%endif%}
        </td> 
    <td></td>
  </tr>
      <tr>
    <th>
4. Coevaluación por roles
        </th>
        <td>
            <a href="javascript:popUp('{{ path('coeval_info', {'id': entity.id }) }}')" class="btn btn-primary btn-xs">Ver Calificaciones <i class="fa fa-sign-in"></i></a>

        </td> 
    <td></td>
  </tr>
  </table>
   
   <script>
  
function popUp(URL) {

    if(typeof(popupWin) != "object" || popupWin.closed)  { 
        popupWin = window.open(URL, 'popupWin', 'scrollbars=auto,toolbar=no,menubar=no,status=no,width=1000,height=600, left=100,top=100');
    } 
    else{ 
        popupWin.location.href = URL; 
    }

    popupWin.focus(); 
 }
 
</script>

{% endblock %}
   