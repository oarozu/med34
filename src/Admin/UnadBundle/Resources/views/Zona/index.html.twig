{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Zonas</h1>

    <table class="table table-bordered table-striped hidden-mobile" style="width: 95%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Director</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('zona_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.director.nombres }} {{ entity.director.apellidos }}</td>
                <td>
       
                        <a href="{{ path('zona_edit', { 'id': entity.id }) }}">edit</a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('zona_new') }}">
                Nueva
            </a>
        </li>
    </ul>
    {% endblock %}
