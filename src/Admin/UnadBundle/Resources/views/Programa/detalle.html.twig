<table class="table table-bordered table-striped hidden-mobile" style="width: 95%">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nivel</th>
                <td>{{ entity.nivel }}</td>
            </tr>
            <tr>
                <th>Lider</th>
                <td>[{{ entity.lider? entity.lider.user.id}}]
                {{ entity.lider? entity.lider.user.nombres~' '~ entity.lider.user.apellidos : 'sin'}}</td>
            </tr>
        </tbody>
    </table>
    
    Cursos:
    
    <table class="table table-bordered table-striped hidden-mobile" style="width: 95%">
    <tr>
    <th>id</th>
    <th>Curso</th>
    <th>Director</th>
    <th>Nombres</th>
    </tr>     
     {%for curso in entity.cursos %}  
     <tr>
    <td>
    <a href="{{ path('curso_show', { 'id': curso.id }) }}">{{curso.id}}</a>
    </td>
    <td>{{curso.nombre}}</td>
    {%if curso.director%}
    <td>{{curso.director.user.id}}</td>
    <td>{{curso.director.user.nombres}} {{curso.director.user.apellidos}}</td>
   {%else%}
    <td>-</td>
    <td>Sin director</td>
    {%endif%}
     </tr>
    {%endfor%}
    </table>